{% extends 'base.html.twig' %}

{% block title %}Basket Page{% endblock %}

{% block body %}

    {% include '/partials/header.twig.html.twig' %}
    <div class="basket-page">

        <div class="my-basket">
            <h1> Mon panier </h1>
            <a class="basket-clear"> x Vider le panier</a>

            <div class="basket-item">
                <img src="{{ asset('images/products/product1.png') }}" alt="product1">
                <div class="basket-item-text">
                    <h2> Nécessaire, déodorant Bio </h2>
